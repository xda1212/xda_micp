<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/tools_dialog_bg"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:textColor="@color/tools_color_3"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="11dp"
        >

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/tools_color_3"
            android:textSize="15sp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tools_divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/dialog_canle_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tools_dialog_btn_canle_selector"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textColor="@color/tools_color_3"
            android:textSize="18sp"

            />

        <View
            android:id="@+id/btn_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/tools_divider"
            />


        <Button
            android:id="@+id/dialog_ok_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tools_dialog_btn_ok_selector"
            android:gravity="center"
            android:text="@android:string/ok"
            android:textColor="@color/tools_color_3"
            android:textSize="18sp"
            />


    </LinearLayout>

</LinearLayout>
