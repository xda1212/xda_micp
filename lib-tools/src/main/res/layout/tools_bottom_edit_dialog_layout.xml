<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tools_gray_f4"
    android:orientation="horizontal"
    android:paddingBottom="7dp"
    android:paddingTop="7dp">

    <EditText
        android:id="@+id/bottom_edit_dialog_edit_text"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:background="@drawable/selector_oval_gray_pink"
        android:gravity="top|left"
        android:hint="10-500字"
        android:padding="8dp"
        android:textColorHint="#cccccc"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/bottom_edit_dialog_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="12dp"
        android:text="提交"
        android:textColor="@color/tools_color_6"
        android:textSize="16sp" />

</LinearLayout>