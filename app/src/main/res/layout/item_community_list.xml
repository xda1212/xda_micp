<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_community_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.micp.im.widget.AvatarView
                android:id="@+id/item_community_user_head"
                android:layout_width="40dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/item_community_level"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignBottom="@id/item_community_user_head"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/item_community_user_head"
                android:background="@drawable/shape_user_level_bg"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="LV5"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_community_user_online"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_alignBaseline="@id/item_community_level"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/item_community_level"
                android:textColor="@color/color_2A"
                android:textSize="12sp" />

            <com.micp.im.widget.BlackTextView
                android:id="@+id/item_community_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/item_community_user_head"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:text="用户名"
                android:textColor="@color/color_28"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/item_community_user_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/item_community_user_name"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/item_community_user_name"
                android:baselineAlignBottom="true"
                android:src="@drawable/global_male" />
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_more"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/item_community_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_more"
                android:text="20小时前"
                android:textColor="@color/color_6"
                android:textSize="12sp" />



            <TextView
                android:id="@+id/item_community_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_community_user_head"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_9"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_community_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:textColor="@color/color_6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_community_content_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部"
            android:textColor="@color/color_F27"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_community_image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp" />

        <RelativeLayout
            android:id="@+id/item_community_function_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_community_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:src="@drawable/community_share" />

            <TextView
                android:id="@+id/item_community_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_toLeftOf="@id/item_community_share"
                android:drawableLeft="@drawable/community_comment"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text=""
                android:textColor="@color/color_6"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_community_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_toLeftOf="@id/item_community_comment"
                android:button="@null"
                android:drawableLeft="@drawable/selector_community_like"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:textColor="@drawable/selector_community_like_color"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>