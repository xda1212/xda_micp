<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_community_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_9" />

        <TextView
            android:id="@+id/item_community_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_community_content_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部"
            android:textColor="@color/color_F27"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_community_image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:id="@+id/item_community_function_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/item_community_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_F27"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_community_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20小时前"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_community_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/selector_home_page_like"
                android:paddingBottom="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/color_E6"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_community_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/home_page_comment"
                android:paddingBottom="15dp"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="@color/color_E6"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/item_community_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="5dp"
                android:src="@drawable/home_page_share" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>