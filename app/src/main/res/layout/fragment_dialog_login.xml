<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_loginaward1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_award_title_bg">

        <TextView
            android:id="@+id/login_award_welcome_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:text="@string/login_awrad"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_login_award_day_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_award_welcome_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_login_award_day_bg"
            android:padding="5dp"
            android:text="已经连续签到X天"
            android:textColor="@color/color_3D"
            android:textSize="9sp" />
    </RelativeLayout>

    <com.micp.im.widget.GridViewWithHeaderAndFooter
        android:id="@+id/login_award_cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:horizontalSpacing="7dp"
        android:numColumns="3"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:verticalSpacing="7dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="13dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/login_award_seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sunday"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="第7天"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/login_receive"
            android:layout_width="122dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/login_award_button_bg"
            android:gravity="center"
            android:text="@string/login_receive"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>