<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:paddingLeft="10dp"
        android:weightSum="7">

        <com.micp.im.widget.AvatarView
            android:id="@+id/iv_live_user_head"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_live_user_head"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/iv_live_user_head"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.micp.im.widget.BlackTextView
                android:id="@+id/tv_live_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:textColor="@color/color_2A"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/item_recommend_user_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:src="@drawable/global_male" />

            <TextView
                android:id="@+id/iv_live_user_anchorlevel"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape_user_level_bg"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="LV5"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_recommend_user_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_live_user_head"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/iv_live_user_head"
            android:text="签名"
            android:textColor="@color/color_86"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_recommend_user_online"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignTop="@id/iv_live_user_head"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:textColor="@color/color_2A"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_recommend_user_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_live_user_head"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:text="距离"
            android:textColor="@color/color_86"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/color_F1" />

</LinearLayout>