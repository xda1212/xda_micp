<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/rl_home_pager_yi_order"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_home_tick_order"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <com.micp.im.widget.AvatarView
                android:id="@+id/av_home_page_order1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <com.micp.im.widget.AvatarView
                android:id="@+id/av_home_page_order2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <com.micp.im.widget.AvatarView
                android:id="@+id/av_home_page_order3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/me_go" />
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/h_line"
        android:layout_height="2px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <com.micp.im.widget.BlackTextView
                android:id="@+id/tv_home_page_numn"
                style="@style/home_user_info_item_labe"
                android:text="@string/number" />

            <com.micp.im.widget.BlackTextView
                android:id="@+id/tv_home_page_numid"
                style="@style/home_user_info_item_content" />

        </LinearLayout>

        <View
            style="@style/h_line"
            android:layout_height="2px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <com.micp.im.widget.BlackTextView
                style="@style/home_user_info_item_labe"
                android:text="@string/sign" />

            <com.micp.im.widget.BlackTextView
                android:id="@+id/tv_home_page_sign2"
                style="@style/home_user_info_item_content" />

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/h_line"
        android:layout_height="2px" />
</LinearLayout>
