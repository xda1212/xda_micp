<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--顶部钻石-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_home_page_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:src="@drawable/icon_arrow_left_white" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_more"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--头像-->
        <RelativeLayout
            android:id="@+id/personal_home_page_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp">

            <com.micp.im.widget.AvatarView
                android:id="@+id/av_home_page_uhead"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:border_color="@color/white"
                app:border_width="1dp" />
            <!--等级-->
            <ImageView
                android:id="@+id/iv_home_page_anchorlevel"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="3dp" />
        </RelativeLayout>

        <com.micp.im.widget.BlackTextView
            android:id="@+id/tv_home_page_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/personal_home_page_avatar"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:id="@+id/iv_home_page_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_home_page_uname" />

        <ImageView
            android:id="@+id/iv_home_page_level"
            style="@style/live_level_style"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_home_page_sex" />

        <com.micp.im.widget.BlackTextView
            android:id="@+id/tv_home_page_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_page_uname"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/personal_home_page_avatar"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_home_page_menu_follow"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/tv_home_page_sign"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/personal_home_page_avatar"
            android:background="@drawable/shape_personal_home_page_attention_bg"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="+关注"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rl_live_status"
            android:layout_width="46dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/personal_home_page_online_bg"
            android:drawableLeft="@drawable/personal_home_page_online_left"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="在线"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/personal_home_page_fans_layout_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.micp.im.widget.BlackTextView
            android:id="@+id/tv_home_page_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注 0"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <View
            android:layout_width="1px"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white" />

        <com.micp.im.widget.BlackTextView
            android:id="@+id/tv_home_page_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝 0"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>