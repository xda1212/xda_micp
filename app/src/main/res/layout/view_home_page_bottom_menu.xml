<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/color_9"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_home_page_menu_privatechat"
        style="@style/home_page_user_info_bottom_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_home_follow"
            android:drawablePadding="5dp"
            android:text="@string/privatechat"
            android:textColor="@color/color_E6"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/color_9" />

    <LinearLayout
        android:id="@+id/home_page_send_present"
        style="@style/home_page_user_info_bottom_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/sixinfollow"
            android:drawablePadding="5dp"
            android:text="送礼物"
            android:textColor="@color/color_E6"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
</LinearLayout>